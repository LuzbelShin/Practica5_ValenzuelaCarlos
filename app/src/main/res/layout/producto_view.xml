<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/productImg"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/caramelfrap"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/contentDescription"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/productName"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:textColor="@color/productNameColor"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/productDescription"
            android:fontFamily="sans-serif-light"
            android:textSize="8sp"
            android:textColor="@color/productDescriptionColor"
            android:layout_marginStart="15dp"

            />

    </LinearLayout>
    <TextView
        android:id="@+id/productPrice"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/productCost"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="@color/productPriceColor"
        />
</LinearLayout>